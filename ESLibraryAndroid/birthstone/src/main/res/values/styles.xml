<resources>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:layout_marginTop">@dimen/dimen_dialog_to_top50dp</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/es_transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/es_dialog_background</item>
    </style>

    <style name="loadingDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground"> @drawable/es_dialog_white_rectangle </item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

